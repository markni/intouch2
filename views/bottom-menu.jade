nav.navbar.red-bg.navbar-default.navbar-fixed-bottom.super-nav-bar-bottom(role="navigation")
    div.action_btns.input-append(ng-class='{hidden:!isAnythingSelected()}')
        button.btn.col-lg-3.col-xs-3.white-text.red-bg(ng-click='updateStatus("collect")')
            h4 {{ 'FINISH' | translate }}
        button.btn.col-lg-3.col-xs-3.white-text.red-bg(ng-click='updateStatus("on_hold")')
            h4 {{ 'HOLD' | translate }}
        button.btn.col-lg-3.col-xs-3.white-text.red-bg(ng-click='updateStatus("dropped")')
            h4 {{ 'TRASH' | translate }}

        button.btn.col-lg-3.col-xs-3.white-text.red-bg(ng-click='cancelSelected()')
            h4 {{ 'CANCEL' | translate }}



    div(ng-class='{hidden:isAnythingSelected()}')
        div.col-lg-4.col-xs-4
        div.col-lg-4.col-xs-4.text-center.padding-right-0.padding-left-0(style="position:relative")
            div.tooltips(title="{{msg}}",ng-class="{'hidden':msg==''}")
                span.inner.text-left{{msg}}

            img.img-circle.navbar-menu-bot.no-href-link(src='{{bot}}',ng-click="showRandomMsg()")
        div.col-lg-4.col-xs-4
            div.col-lg-4.col-xs-4.no-href-link(style="position:relative",ng-click="toggleSideMenu()")
                span.navbar-menu-btn.glyphicon.icon-flipped(ng-class="{'icon-rotated-180-right':showSideMenu,'glyphicon-align-justify':showSideMenu,'glyphicon-list':!showSideMenu}")

