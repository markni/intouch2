div.row
    div.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3
        div.row.form-group.subject-cover(style="height:200px;background-image:url({{subject.images.large}})")
            div
                div.col-xs-4.col-lg-4
                div.col-xs-4.col-lg-4.text-center.padding-left-0.padding-right-0

                    div.div-circle.square-100.white-border-5.progress-70(style="background-color:white;margin:120px auto 0 auto; box-shadow: rgba(80, 80, 80, 0.3) 1px 2px;")
                        h2.white-text(style="margin:0;font-size:84px;text-shadow: rgba(80, 80, 80, 0.3) 1px 2px;") 9
                div.col-xs-4.col-lg-4

        div.form-group.card.text-center.row.subject-title(style="padding-top:0")
            h1(style="padding-top:10px") {{subject.name}}
            h4 {{subject.name_cn}}

        div.card.form-group.row(ng-repeat="ep in subject.eps")
            div.col-xs-2.col-lg-2  EP.{{ep.sort}}
            div.col-xs-10.col-lg-10  {{ep.name}}


        div.row.form-group
            a.btn.btn-danger.btn-block(href="/"){{ 'RETURN_TO_HOME' | translate}}